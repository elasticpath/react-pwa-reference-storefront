{
  "name": "ep-store-monorepo",
  "private": true,
  "version": "3.1.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "app",
      "components",
      "cortexjs",
      "storybook"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/babel-loader"
    ]
  },
  "dependencies": {
    "aws-amplify": "^1.1.29",
    "aws-amplify-react": "^2.3.9",
    "core-js": "^2.6.9",
    "lerna": "^3.14.1",
    "react-simple-chatbot": "^0.6.1",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "yarn build-component-types && cd app && yarn start",
    "build": "yarn build-components && cd app && yarn build",
    "build-component-types": "cd components && tsc --EmitDeclarationOnly",
    "build-components" : "cd components && yarn build",
    "test": " cd app && yarn test",
    "storybook": "cd storybook && yarn storybook",
    "deploy": "cd app && yarn deploy"
  }
