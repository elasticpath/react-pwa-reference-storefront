{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "globals": {},
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/webpack.config.base.js"
      }
    }
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 350,
        "tabWidth": 2,
        "ignoreComments": true
      }
    ],
    "react/prop-types": "error",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-underscore-dangle": "off",
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "jsx-a11y/label-has-for": [
      "error",
      {
        "components": [
          "Label"
        ],
        "required": {
          "every": [
            "id"
          ]
        }
      }
    ]
  }
}
