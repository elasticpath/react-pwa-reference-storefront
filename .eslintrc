{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "globals": {},
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/webpack.config.base.js"
      }
    }
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 150,
        "tabWidth": 2,
        "ignoreComments": true
      }
    ],
    "react/prop-types": "error",
    "no-underscore-dangle": "off"
  }
}
